mixin navbar(active, categories)
    - each category in categories
            - if (category.t == 'divider')
                li
                    a |
            - else if (active == category.t)
                li.active
                    a(href="/"+category.t)!= category.n
            - else
                li
                    a(href="/"+category.t)!= category.n

mixin mainnav(active, loggedin)
    - if(loggedin) categories = [{t: 'logout/',n: 'Logout'}];
    - else categories = [{t: 'login/',n: 'Login/Signup'}];
    - categories = categories.concat([{t: 'post/',n: 'Posts'},{t: 'comment/',n: 'Comments'},{t: 'note/',n: 'Notes'},{t: 'artist/',n: 'Artists'},{t: 'tag/',n: 'Tags'},{t: 'wiki/',n: 'Wiki'},{t: 'more/',n: '&#187;'}]);
    mixin navbar(active, categories)

mixin postsnav(active)
    - categories = [{t: 'post/', n: 'List'},{t: 'upload/', n: 'Upload'},{t: 'favorites/', n: 'Favorites'},{t: 'popular/', n: 'Popular'},{t: 'random/', n: 'Random'},{t: 'changes/', n: 'Recent changes'}];
    mixin navbar(active, categories)

mixin wikinav(active, wiki)
    - if (wiki.t == 1)
        - categories = [{t: 'wiki/', n: 'List'}, {t: 'wiki/new/', n: 'New'}, {t: 'help/wiki/', n: 'Help'}, {t: 'divider'},{t: 'post/?tags='+wiki.n, n: 'Posts for '+wiki.p+' <span class="badge badge-info">'+wiki.c+'</span>'}, {t: 'wiki/view/'+wiki.n, n: 'View'}, {t: 'wiki/edit/'+wiki.n, n: 'Edit'}, {t: 'wiki/history/'+wiki.n, n: 'History'}];
    - else
        - categories = [{t: 'wiki/', n: 'List'}, {t: 'wiki/new/', n: 'New'}, {t: 'help/wiki/', n: 'Help'}, {t: 'divider'}, {t: 'wiki/view/'+wiki.n, n: 'View'}, {t: 'wiki/edit/'+wiki.n, n: 'Edit'}, {t: 'wiki/history/'+wiki.n, n: 'History'}];
    mixin navbar(active, categories)

mixin commentnav(active)
    - categories = [{t: 'comment/', n: 'List'}, {t: 'comment/search/', n: 'Search'}, {t: 'help/comment', n: 'Help'}];
    mixin navbar(active, categories)

mixin tagnav(active)
    - categories = [{t: 'tag/', n: 'List'}, {t: 'tag/popular/', n: 'Popular'}, {t: 'tag/aliases/', n: 'Aliases'}, { t: 'tag/implications/', n: 'Implications' }, { t: 'help/tag/', n: 'Help' }];
    mixin navbar(active, categories)